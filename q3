#include <stdio.h>
int i,n;
void main(void){
    printf("number of array elements: ");
    scanf("%d",&n);
    float arr[n];
    for(i=0; i<n; i++){
        printf("element no.%d: ",i+1);
        scanf("%f",&arr[i]);
    }
    for(i=0; i<n; i++){
        if(arr[i]>arr[i+1] && i+1<n)
            {printf("\nnot ");break;}
    }
    printf("ascending array");
}
